server {
    listen 80 default_server;

    root /var/www;

    location /drawgantt {
        index index.php;
    }

    location /drawgantt-svg {
        index index.php;
    }

    # location /oarapi {
    #     rewrite /oarapi/(.*)$ /oarapi.cgi? last;
    # }

    location /oarapi {
        rewrite ^/oarapi/(.*)$ /$1? break;
        # rewrite ^/oarapi/(.*)$ /$1? last;
        gzip off;
        include fastcgi_params;
        fastcgi_param REMOTE_ADDR $http_x_real_ip;
        fastcgi_param DOCUMENT_ROOT     /usr/local/lib/site_perl;
        fastcgi_param SCRIPT_FILENAME   /usr/local/lib/cgi-bin/oarapi/oarapi.cgi;
        fastcgi_pass unix:/var/run/fcgiwrap.socket;
    }


    location /monika {
        index monika.cgi;
    }

    location /oarapi-debug {
        index oarapi-debug.cgi;
    }

    location ~ .*.cgi$ {
        gzip off;
        include fastcgi_params;
        fastcgi_param REMOTE_ADDR $http_x_real_ip;
        fastcgi_param DOCUMENT_ROOT     /usr/local/lib/site_perl;
        fastcgi_param SCRIPT_FILENAME   $document_root$fastcgi_script_name;
        fastcgi_pass unix:/var/run/fcgiwrap.socket;
    }

    location ~ .*.php$ {
        try_files $uri =404;
        fastcgi_pass unix:/var/run/php5-fpm.sock;
        fastcgi_index index.php;
        include fastcgi_params;
        fastcgi_param REMOTE_ADDR $http_x_real_ip;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
   }
}
