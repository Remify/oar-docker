[Unit]
Description=Fix broken docker /etc/hosts mount
ConditionFileIsExecutable=/var/lib/container/init-scripts/fix_etc_hosts_mount.sh
Before=oardocker.target

[Service]
Type=oneshot
ExecStart=/var/lib/container/init-scripts/fix_etc_hosts_mount.sh
# TimeoutSec=0
RemainAfterExit=on

[Install]
WantedBy=oardocker.target
